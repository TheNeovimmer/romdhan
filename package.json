{
  "name": "romdhan",
  "version": "1.0.1",
  "description": "A beautiful CLI tool for Ramadan - prayer times, countdown, Quran, Hadith, Zakat calculator, and more",
  "main": "dist/index.js",
  "bin": {
    "romdhan": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "ramadan",
    "islam",
    "prayer-times",
    "quran",
    "hadith",
    "zakat",
    "tasbih",
    "cli",
    "command-line",
    "terminal"
  ],
  "author": "Ilyes Bouzayen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheNeovimmer/romdhan.git"
  },
  "bugs": {
    "url": "https://github.com/TheNeovimmer/romdhan/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "configstore": "^6.0.0",
    "dayjs": "^1.11.10",
    "figlet": "^1.7.0",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/configstore": "^6.0.2",
    "@types/figlet": "^1.5.8",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  }
}
